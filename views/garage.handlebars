{{!-- car input section --}}
{{!-- fix overlap when resizing window --}}
<section class="bg-image p-3">
    <div class="container text-center">
        <div class="text-center pt-3">
            <h1 class="font-weight-bold py-4">Garage</h1>
            <h4>Enter your vechicle information</h4>
        </div>

        <div class="col-lg-6 offset-lg-3 mt-5">
            <form id="cars" name="cars" class="col-md-6 offset-md-3">
                <div class="row mb-3">
                    <input type="text" class="form-control" id="make" name="make" placeholder="Make">
                </div>
                <div class="row mb-3">
                    <input type="text" class="form-control" id="model" name="model" placeholder="Model">
                </div>
                <div class="row mb-3">
                    <input type="number" class="form-control" id="horsepower" name="horsepower" placeholder="Horsepower">
                </div>
                <div class="row mb-3">
                    <input type="number" class="form-control" id="topSpeed" name="topSpeed" placeholder="Top Speed">
                </div>
                <div class="row mb-3">
                    <input type="number" class="form-control" id="acceleration" name="acceleration"
                        placeholder="Acceleration">
                </div>

                <div class="text-center">
                    <div class="col-lg-12">
                        <button type="submit" class="carPost btn1 mt-3 mb-5">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>

{{!-- car section --}}
<div class="album py-5 bg-light">
    <div class="text-center pb-4">
        <h3 class="font-weight-bold py-4">Registration Schedule:</h3>
    </div>
    <div class="container">
        <div class="row no-gutters">

            <div class="col-md-6 p-4">
                <div class="card flex-mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column">
                        {{#each cars as |car|}}
                        <h3 class="m-2 text-center">
                            {{car.make}} {{car.model}}
                        </h3>

                        <p class="text-muted text-center">
                            Car info
                        </p>
                        <div class="card-text mb-auto">
                            <ul style="list-style-type: none;">
                                <li>
                                    <h4>Horsepower (BHP): <strong>{{car.horsepower}}</strong></h4>
                                </li>
                                <li>
                                    <h4>Top Speed (MPH): <strong>{{car.topSpeed}}</strong></h4>
                                </li>
                                <li>
                                    <h4>0-60 (sec): <strong>{{car.acceleration}}</strong></h4>
                                </li>
                                <li>
                                    <h4>User: <strong>{{car.user_id}}</strong></h4>
                                </li>
                                {{#each car.car_race as |race|}}
                                <li>
                                    <h4>Race Track: <strong>{{race.title}}</strong></h4>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        <input class="btn btn-dark mb-2" type="button" value="Update" data-bs-toggle="modal" data-bs-target="#car{{car.id}}">
                        <input class="btn btn-warning mb-2 deleteButton" type="button" value="Delete" data-id="{{car.id}}">

                          <!-- Modal -->
                        <div class="modal fade" id="car{{car.id}}" tabindex="-1" aria-labelledby="car{{car.id}}Label" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="car{{car.id}}Label">Update your specs</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form class="carPost-form">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="carMake{{car.id}}" class="form-label">Make</label>
                                        <input type="text" class="form-control" id="carMake{{car.id}}" value="{{car.make}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="carModel{{car.id}}" class="form-label">Model</label>
                                        <input type="text" class="form-control" id="carModel{{car.id}}" value="{{car.model}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="carhorsepower{{car.id}}" class="form-label">Horsepower (hp)</label>
                                        <input type="number" class="form-control" id="carhorsepower{{car.id}}" value="{{car.horsepower}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="cartopSpeed{{car.id}}" class="form-label">Top Speed (mph)</label>
                                        <input type="number" class="form-control" id="cartopSpeed{{car.id}}" value="{{car.topSpeed}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="caracceleration{{car.id}}" class="form-label">Goes 0-60 in how many seconds?</label>
                                        <input type="number" class="form-control" id="caracceleration{{car.id}}" value="{{car.acceleration}}">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-warning updateButton" data-id={{car.id}}>Save changes</button>
                                </div>
                                </form>
                            </div>
                            </div>
                        </div>

                        {{/each}}
                    </div>
                </div>
            </div>


            {{!-- registered race info --}}
            <div class="col-md-6 p-4">
                <div class="card flex-mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <img src="https://image.freepik.com/free-vector/suzuka-circuit-motorsport-autosport-japan-grand-prix-race-track_97886-5398.jpg"
                            class="card-img-top" alt="suzuka">
                        {{#each cars as |car|}}
                        {{#each car.car_race as |race|}}
                        <ul>
                            <h5 class="card-title text-center pt-3">{{race.title}}</h5>
                            <li>Town: {{race.location_town}}</li>
                            <li>State: {{race.location_state}}</li>
                            <li>Date: {{race.race_date}}</li>
                        </ul>
                        {{/each}}
                        {{/each}}


                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="../js/garage.js"></script>